header.content_title
  h1= @instrument.reference

section.content
  section.details
    h3= @instrument.designation
    section.primary_details
      dl
        dt Brand
        dd= @instrument.brand
        dt Model
        dd= @instrument.model
        dt Serial Number
        dd= @instrument.serial_number
        dt Part Number
        dd= @instrument.part_number
    section.primary_details
      dl
        dt Department
        dd= @instrument.department
    section.secondary_details
      dl
        dt Remarks
        dd= @instrument.remarks

  section.actions
    -if policy(@instrument).edit?
      = link_to 'Edit', edit_instrument_path(@instrument), class: :primary
    - if policy(@instrument).destroy?
      = link_to 'Destroy', @instrument, method: :delete,
                                        data: { confirm: 'Are you sure?' },
                                        class: :danger
    = link_to 'Back to instrument list', instruments_path, class: :default
